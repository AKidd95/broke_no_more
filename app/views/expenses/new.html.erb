<%= form_with model: Expense.new do |form| %>
  <%= "Enter Fixed Expenses" %>
  <%= form.text_field :rent, placeholder: "Rent" %>
  <%= form.text_field :insurance, placeholder: "Insurance" %>
  <%= form.text_field :transportation, placeholder: "Transportation" %>
  <%= form.text_field :education, placeholder: "Education" %>
  <%= form.text_field :food, placeholder: "Food" %>
  <%= form.text_field :other, placeholder: "Other" %>
  <%= "Enter Leisure Expenses" %>
  <%= form.text_field :leisure_activities, placeholder: "Leisure activities" %>
  <%= form.text_field :cultural_activities, placeholder: "Cultural activities" %>
  <%= form.text_field :holidays, placeholder: "Holidays" %>
  <%= form.text_field :sport, placeholder: "Sport" %>
  <%= form.text_field :eating_out, placeholder: "Eating out" %>
  <%= form.text_field :beauty, placeholder: "Beauty" %>
  <%= form.text_field :various, placeholder: "Various" %>
  <%= form.submit ("Submit")%>
<% end %>
